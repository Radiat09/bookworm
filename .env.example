# Server
PORT=5000
DB_URL=mongodb://localhost:27017/bookworm
NODE_ENV=development

# Security & Auth
BCRYPT_SALT_ROUND=10
JWT_ACCESS_SECRET=your_access_secret_here
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRES=7d

# Super Admin (seed)
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=changeme

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# Session
EXPRESS_SESSION_SECRET=some_session_secret

# Frontend
FRONTEND_URL=http://localhost:3000

# SSL / Payment (placeholders)
SSL_STORE_ID=store_id
SSL_STORE_PASS=store_pass
SSL_PAYMENT_API=https://payment.example/api
SSL_VALIDATION_API=https://payment.example/validate
SSL_SUCCESS_FRONTEND_URL=https://yourfrontend/success
SSL_FAIL_FRONTEND_URL=https://yourfrontend/fail
SSL_CANCEL_FRONTEND_URL=https://yourfrontend/cancel
SSL_SUCCESS_BACKEND_URL=https://yourbackend/success
SSL_FAIL_BACKEND_URL=https://yourbackend/fail
SSL_CANCEL_BACKEND_URL=https://yourbackend/cancel
SSL_IPN_URL=https://yourbackend/ipn

# Cloudinary
CLOUDINARY_CLOUD_NAME=cloud_name
CLOUDINARY_API_KEY=cloudinary_api_key
CLOUDINARY_API_SECRET=cloudinary_api_secret

# Email / SMTP
SMTP_USER=smtp_user
SMTP_PASS=smtp_pass
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_FROM="Bookworm" <no-reply@example.com>

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
